@startuml ManageCategory

left to right direction
scale 3
skin rose

actor Admin as admin
actor Customer as customer
actor Staff as staff

rectangle "Manage category" {
    usecase (Create category) as tdm
    usecase (View category list) as xdsdm
    usecase (View category info) as xttdm
    usecase (Export category list) as xudsdm
    usecase (Delete category) as xodm
    usecase (Update category) as sttdm
    usecase (View category statistics) as xtk
}

admin --- tdm   
admin --- xttdm
admin --- xudsdm
admin --- xodm
admin --- sttdm
admin --- xtk

customer --- xttdm

staff --- xttdm

tdm <.. xdsdm : <<include>>
xttdm <.. xdsdm : <<include>>
xudsdm <.. xdsdm : <<include>>

@enduml